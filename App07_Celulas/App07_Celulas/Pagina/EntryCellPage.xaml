<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App07_Celulas.Pagina.EntryCellPage">
    <ContentPage.Content>
        <!-- Pra criar formulários (entrada de dados) -->
        <TableView>
            <TableRoot>
                <TableSection Title="Cadastro">
                    <EntryCell Label="Nome" Placeholder="Digite o Nome" />
                    <EntryCell Label="Cargo" Placeholder="Digite o Cargo" />
                </TableSection>
            </TableRoot>
            
        </TableView>
    </ContentPage.Content>
</ContentPage>